#转变文化
mytm_education_flags_convert_culture_effect = {
	scope:ward = {
		if = {
			limit = { NOT = { scope:ward.culture = scope:guardian_liege.culture } }
			set_culture = scope:guardian_liege.culture
		}
	}
}
#转变信仰
